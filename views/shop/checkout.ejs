<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <h4>Checkout page!!!</h4>
                <ul class="cart__item-list">
                    <% products.forEach(p=> { %>
                        <li class="cart__item">
                            <h1>
                                <%= p.productId.title %>
                            </h1>
                            <h2>Quantity: <%= p.quantity %>
                            </h2>
                            
                        </li>
                        <% }) %>
                </ul>
                <div class="centered">
                    <h2>Totel: <%= totalSum %></h2>
                </div>
                <div class="centered">
                    <button id="order-btn" class="btn">Order</button>
                    <script src="https://js.stripe.com/v3/"></script>
                    <script>
                        var stript = Stripe('pk_test_51LUyblSG9QvoyY4Vg2rJr0OU7EaS3vSorgClaextwQnREy34M72nVF1lpE0sva1l2ibiDxzSRq31Bs4xiJBhrqGz00B1QuU8I1')

                        var orderBtn = document.getElementById('order-btn')
                        orderBtn.addEventListener('click',function() {
                            console.log("Clicked!!!")
                            stript.redirectToCheckout({
                                sessionId:'<%= sessionId %>'
                            })
                        })
                    </script>
                </div>
            </main>
    <%- include('../includes/end.ejs') %>